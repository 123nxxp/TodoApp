<%- include("header") -%>

    <div class="box" id="heading">
        <h1><%= listTitle %> </h1>
    </div>
    
    <div class="box">
        

            <!-- <li> <%=  newListItems %></li>  -->   
            <!-- it is printing all the array items in a single li  -->
    
            <!-- we will loop through the array to get new li for each new item added  -->
    
            <% for( var i=0; i<newListItems.length ; i++){ %>
                <div class="item">
                    <input type ="checkbox">
                    <p><%= newListItems[i] %></p>
                    <!-- <input type="reset" name="Edit" id="" style="margin-left: auto;"> -->
                    
                </div> 
                
                
            <% } %>

            <form class="item"  action="/" method="post" >
                <input type="text" name="newItem" placeholder="New Item" autocomplete="off" >
        
                <button type="submit" name="list" value= <%= listTitle %>> + </button>
            </form>        

    </div>



<%- include("footer") -%>


